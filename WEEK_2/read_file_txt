
def standardlize(data):
    data = data.lower()
    data = data.replace(".", ' ')
    data = data.replace(",", ' ')
    data = data.replace("-", ' ')
    data = data.split()
    return data


def countword(data, data_source):
    len_data_source = len(data_source)
    len_data = len(data)
    BoW = []
    for i in range(len_data):
        temp = 0
        for j in range(len_data_source):
            if data[i] == data_source[j]:
                temp = temp + 1
        BoW.append(temp)
    dict_result = dict(zip(data, BoW))
    return dict_result


def main():
    with open('E:\AIO 2024\Demo Git\AIO-EXERCISE\P1_data.txt', 'r') as f:
        corpus = f.read()
    f.close()
    data_source = standardlize(corpus)
    data = set(data_source)
    data = list(data)
    result = countword(data, data_source)
    print(result)


if __name__ == "__main__":
    main()
